<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    tools:context="com.example.bugtracking.bugtracking.ProjectCrudActivity">

    <EditText
        android:id="@+id/proCrudTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Title"/>

    <EditText
        android:id="@+id/proCrudDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:singleLine="false"/>

    <EditText
        android:id="@+id/proStartDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="StartDate"

        />
    <Button
        android:id="@+id/proStartDateAdd"
        android:layout_width="wrap_content"
        android:layout_height="90px"
        android:text="Add Start Date"
        android:textSize="9dp"
        android:onClick="clicAddStartDate"
        />

    <EditText
        android:id="@+id/proEndDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="EndDate"

        />
    <Button
        android:id="@+id/proEndDateAdd"
        android:layout_width="wrap_content"
        android:layout_height="90px"
        android:text="Add End Date"
        android:textSize="9dp"
        android:onClick="clicAddEndDate"
        />
    <Button
        android:id="@+id/AddProjectCrud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="AddProject"

        android:onClick="clicAddProject"
        android:foreground="#adffae36" />

    <TextView
        android:id="@+id/proCrudTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        tools:context="com.example.bugtracking.bugtracking.ProjectCrudActivity">

        <TextView
            android:id="@+id/prodCrudDevelopersTitle"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:paddingBottom="140px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developpers"/>

        <Button
            android:id="@+id/prodCrudAddDevelopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/prodCrudDevelopersTitle"
            android:layout_alignParentRight="true"
            android:text="Add"
            android:onClick="clicAddDeveloper"
            />


    </RelativeLayout>



</LinearLayout>



