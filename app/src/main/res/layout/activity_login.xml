<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.bugtracking.bugtracking.LoginActivity">

    <EditText
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:inputType="textPassword"/>



    <Button
        android:id="@+id/logButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="@string/logButton"
        android:onClick="clicLogin"/>
    <Button
        android:id="@+id/register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:onClick="clicRegister"/>
    <TextView
        android:id="@+id/login_messageError"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="You have to be connected to access at this Activity !"
        android:textColor="@color/colorError"
        android:textSize="18dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/login_messageError2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Your login or password is wrong !"
        android:textColor="@color/colorError"
        android:textSize="18dp"
        android:visibility="invisible"
        />



</LinearLayout>
